# Envinronment Variables Example
# Copy this file to .env.local and modify the values accordingly

# ===================================
# SITE CONFIGURATION
# ===================================

# Site URL (used for SEO and sitemap)
NEXT_PUBLIC_SITE_URL=https://vincxx.dev

# ===================================
# PERSONAL INFORMATION
# ===================================

# First name (used throughout the site and CV)
NEXT_PUBLIC_FIRST_NAME=YOUR_FIRST_NAME

# Last name (used throughout the site and CV)
NEXT_PUBLIC_LAST_NAME=YOUR_LAST_NAME

# Full name (used in Hero section and CV header)
NEXT_PUBLIC_FULL_NAME=YOUR_FULL_NAME

# Location (used in CV contact section)
NEXT_PUBLIC_LOCATION=YOUR_LOCATION

# ===================================
# CONTACT INFORMATION
# ===================================

# Email address (used in the contact form)
NEXT_PUBLIC_CONTACT_EMAIL=YOUR_EMAIL

# Phone number (format for href="tel:")
NEXT_PUBLIC_CONTACT_PHONE=+39XXXXXXXXXX

# Phone number (display format)
NEXT_PUBLIC_CONTACT_PHONE_DISPLAY=+39 XXX XXX XXXX

# ===================================
# SOCIAL MEDIA
# ===================================

# Github profile link (used in the Footer)
NEXT_PUBLIC_GITHUB_URL=YOUR_GITHUB_URL

# LinkedIn profile link (used in the Footer)
NEXT_PUBLIC_LINKEDIN_URL=YOUR_LINKEDIN_URL

